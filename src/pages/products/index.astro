---
import Layout from "../../layouts/Layout.astro";
type Rating = {
  rate: number;
};
let products = [];
try {
  const data = await fetch("https://fakestoreapi.com/products");
  products = await data.json();
} catch (error) {
  console.error("chiamta fetch fallita ");
}
---

<Layout title="Products">
  <main>
    <h3>All products</h3>
    <section>
      {
        products.map(
          (product: {
            title: string;
            image: string;
            price: number;
            id: number;
            rating: Rating;
          }) => {
            return (
              <article class="card">
                <h4>{product.title}</h4>
                <div class="image_container">
                  <img src={product.image} alt={product.title} />
                </div>
                <div class="price_wrapper">
                  <p>{product.price}€</p>
                  <p>
                    {Array(Math.floor(product.rating.rate))
                      .fill("⭐")
                      .join(" ")}
                  </p>
                </div>
                <a href={`/products/${product.id}`}>Read more</a>
              </article>
            );
          }
        )
      }
    </section>
  </main>
</Layout>
<style>
  h3 {
    margin: 2rem 0;
  }
  section {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  .card {
    padding: 0.3rem 0.5rem;
    width: 200px;
    min-height: 300px;
    background-color: whitesmoke;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 0.5rem;
  }
  .image_container {
    display: flex;
    justify-content: center;
    width: 100%;
    height: 100px;
  }
  img {
    width: 40%;
    object-fit: contain;
  }
</style>
